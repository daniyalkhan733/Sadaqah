---
import AppealsBanner from "../../components/AppealsBanner.astro";
import Layout from "../../layout/Layout.astro";
import DonationCard from "../../components/DonationCard.astro";
import FAQItem from "../../components/SingleFaq.astro";
import { SEO } from "astro-seo";
const pageImage = "/assets/images/logo.png";
const title = "Give your Qurbani with My Sadaqah Online | Donate Now";
const description =
  "Support My Online Sadaqah Qurbani Appeal to provide fresh meat to families in need. Your donation brings real impact. Give Qurbani Today!";
const keywords =
  "qurbani 2025, donate for qurbani, pay qurbani online, qurbani donations, who has to give qurbani";
---

<SEO
  title={title}
  description={description}
  canonical=""
  openGraph={{
    basic: {
      title: `${title}`,
      type: "website",
      image: `${pageImage}`,
    },
    optional: {
      description: `${description}`,
    },
  }}
  twitter={{
    creator: "@jonasmerlins1",
  }}
  extend={{
    // extending the default link tags
    link: [{ rel: "icon", href: "/favicon.png" }],
    // extending the default meta tags
    meta: [
      {
        name: "twitter:image",
        content: `${pageImage}`,
      },
      {
        name: "twitter:title",
        content: `${title}`,
      },
      {
        name: "twitter:description",
        content: `${description}`,
      },
      { name: "keywords", content: `${keywords}` },
    ],
  }}
/>
<Layout title={title} description={description} pageImage={pageImage}>
  <AppealsBanner
    title="Qurbani 2025"
    description="Your Qurbani, Their Relief"
    image="/assets/images/appeals/qurbani-banner.jpg"
