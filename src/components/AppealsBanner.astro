---
const { title, description, image } = Astro.props;

---


<section class="relative w-full overflow-hidden ">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-[#0E173B]/75"></div>
    </div>

    <!-- Content Container -->
    <div
      class="relative z-10 container mx-auto px-4 py-24 md:py-32 flex flex-col items-center justify-center text-center"
    >
      <!-- Breadcrumbs -->

      <!-- Main Content -->
      <div class="w-full max-w-3xl mx-auto">
        <!-- Tag Animation -->
        <div
          class="my-6 transform transition duration-700 hover:scale-105 hover:-rotate-1 inline-block"
        >
          <span
            class="bg-[#EE0C6E] text-white text-xs md:text-sm font-semibold px-4 py-1.5 rounded-full"
          >
            Home / Appeals / {title}
          </span>
        </div>

        <!-- Title with Animation -->
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 transition-all duration-700 ease-in-out transform translate-y-0 opacity-100 text-shadow-lg"
        >
          <span class="inline-block hoverable-text">{title} </span>
          <!-- <span class="inline-block hoverable-text text-[#EE0C6E]">Us</span> -->
        </h1>

        <!-- Description with Animation -->
        <p
          class="text-lg md:text-xl text-white mb-8 mx-auto transition-all duration-500 ease-in-out transform translate-y-0 opacity-100 leading-relaxed font-medium text-shadow-sm"
        >
          {description}
        </p>
      </div>
    </div>
  </section>