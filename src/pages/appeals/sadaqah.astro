---
import AppealsBanner from "../../components/AppealsBanner.astro";
import Layout from "../../layout/Layout.astro";
import DonationCard from "../../components/DonationCard.astro";
import FAQItem from "../../components/SingleFaq.astro";
import { SEO } from "astro-seo";
const pageImage = "/assets/images/logo.png";
const title = "Give Sadaqah Online and Support Those in Greatest Need";
const description =
  "Donate Sadaqah online easily and securely. Help provide food, water, and care to those in need. 100% of your donation goes to trusted causes.";
const keywords =
  "Sadaqah Donation, Donate Sadaqah, Give Sadaqah, Donate Sadaqah Online, Sadaqah Jariyah";
---

<SEO
  title={title}
  description={description}
  canonical=""
  openGraph={{
    basic: {
      title: `${title}`,
      type: "website",
      image: `${pageImage}`,
    },
    optional: {
      description: `${description}`,
    },
  }}
  twitter={{
    creator: "@jonasmerlins1",
  }}
  extend={{
    // extending the default link tags
    link: [{ rel: "icon", href: "/favicon.png" }],
    // extending the default meta tags
    meta: [
      {
        name: "twitter:image",
        content: `${pageImage}`,
      },
      {
        name: "twitter:title",
        content: `${title}`,
      },
      {
        name: "twitter:description",
        content: `${description}`,
      },
      { name: "keywords", content: `${keywords}` },
    ],
  }}
/>
<Layout title={title} description={description} pageImage={pageImage}>
  <AppealsBanner
    title="Sadaqah"
    description="Pay Your Sadaqah Online and Help Those Most in Need"
    image="/assets/images/home.jpg"
  />

  <DonationCard programId={[]} />

  <section class="relative py-14 overflow-hidden max-w-7xl mx-auto">
    <div class="container mx-auto px-4 relative z-10">
      <!-- Two-column layout -->
      <div class="flex flex-col lg:flex-row gap-8 items-center">
        <!-- Left column: Image -->
        <div class="lg:w-3/5">
          <div
            class="inline-block px-3 py-1 bg-hotpink/10 text-hotpink/90 rounded-full text-xs font-medium mb-4 shadow-sm"
          >
            Why Give Sadaqah with Us?
          </div>

          <h2
            class="text-2xl md:text-3xl font-semibold mb-6 text-customgray relative"
          >
            The Significance & Impact
            <span class="block w-12 h-0.5 bg-teal mt-3"></span>
          </h2>

          <!-- Paragraphs without bullet points -->
          <div class="prose prose-lg text-customgray/80 max-w-none space-y-4">
            <p>
              Giving Sadaqah online is now easier and more impactful than ever.
              My Sadaqah Online offers a trusted, secure platform that allows
              you to donate to causes that matter most—whether it's supporting
              orphans, disaster relief, or building water wells. Your donation
              goes directly to verified projects, ensuring maximum impact and
              transparency.
            </p>

            <p>
              You can give once or set up recurring donations with ease. We
              believe in making giving simple and heartfelt. Every Sadaqah you
              make through us is more than just money—it's mercy, it's hope,
              it's life-changing. Start giving today and see how your small act
              of kindness can bring big change.
            </p>
          </div>

          <!-- Subtle separator -->
          <div
            class="w-full h-px bg-gradient-to-r from-transparent via-customgray/20 to-transparent my-6"
          >
          </div>

          <!-- Simple stat cards -->
          <div class="flex flex-wrap gap-4 items-center justify-start">
            <div
              class="bg-white/80 backdrop-blur-sm px-4 py-3 rounded-lg shadow-sm border border-customgray/10 flex items-center gap-3"
            >
              <div class="text-hotpink">
                <i class="fas fa-check-circle text-lg"></i>
              </div>
              <div>
                <div class="font-medium">Verified Projects</div>
              </div>
            </div>

            <div
              class="bg-white/80 backdrop-blur-sm px-4 py-3 rounded-lg shadow-sm border border-customgray/10 flex items-center gap-3"
            >
              <div class="text-teal">
                <i class="fas fa-repeat text-lg"></i>
              </div>
              <div>
                <div class="font-medium">Recurring Donations</div>
              </div>
            </div>

            <div
              class="bg-white/80 backdrop-blur-sm px-4 py-3 rounded-lg shadow-sm border border-customgray/10 flex items-center gap-3"
            >
              <div class="text-customblue">
                <i class="fas fa-coins text-lg"></i>
              </div>
              <div>
                <div class="font-medium">Maximum Impact</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right column: Content -->
        <div class="lg:w-2/5">
          <div class="relative">
            <!-- Main image with styling -->
            <div
              class="rounded-tr-3xl rounded-bl-3xl overflow-hidden shadow-md"
            >
              <img
                src="/assets/images/home.jpg"
                alt="Sadaqah distribution"
                class="w-full h-auto object-cover"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="relative py-16 bg-white max-w-7xl mx-auto">
    <div class="container mx-auto px-4">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <div
          class="inline-block px-4 py-1 bg-teal/10 text-teal rounded-full text-sm font-medium mb-3"
        >
          <i class="fas fa-info-circle mr-2"></i>Make an Impact Today
        </div>
        <h2 class="text-3xl font-bold mb-4">How Your Giving Helps</h2>
        <div class="w-20 h-1 bg-hotpink mx-auto"></div>
      </div>

      <!-- Content Paragraphs -->
      <div class="max-w-7xl mx-auto">
        <p class="text-lg mb-6 text-customgray leading-relaxed">
          Your Sadaqah can bring food, warmth, and safety to those with nothing.
          At My Sadaqah Online, your donation supports people in urgent
          need—from conflict zones to disaster-stricken areas. Even a small
          amount can help feed a family, provide clean water, or offer shelter.
        </p>

        <p class="text-lg mb-8 text-customgray leading-relaxed">
          Join thousands who give with sincerity and purpose. Choose a cause,
          donate with confidence, and watch your generosity create real change.
          Pay your Sadaqah online and become a lifeline for those who need it
          most.
        </p>

        <!-- Key Points -->
        <div class="grid md:grid-cols-2 gap-6 mt-8">
          <div
            class="bg-customblue/5 p-6 rounded-xl border-l-4 border-customblue"
          >
            <div class="flex items-center gap-3 mb-3">
              <div class="bg-customblue/10 p-3 rounded-full text-customblue">
                <i class="fas fa-hands"></i>
              </div>
              <h3 class="font-bold text-xl">What Your Sadaqah Supports</h3>
            </div>
            <ul class="space-y-2 text-customgray">
              <li class="flex items-start gap-2">
                <i class="fas fa-circle text-xs mt-1.5 text-hotpink"></i>
                <span>Food, clean water, and healthcare aid</span>
              </li>
              <li class="flex items-start gap-2">
                <i class="fas fa-circle text-xs mt-1.5 text-hotpink"></i>
                <span>Shelter for families and education for children</span>
              </li>
              <li class="flex items-start gap-2">
                <i class="fas fa-circle text-xs mt-1.5 text-hotpink"></i>
                <span>Sustainable projects for long-term impact</span>
              </li>
            </ul>
          </div>

          <div class="bg-teal/5 p-6 rounded-xl border-l-4 border-teal">
            <div class="flex items-center gap-3 mb-3">
              <div class="bg-teal/10 p-3 rounded-full text-teal">
                <i class="fas fa-star"></i>
              </div>
              <h3 class="font-bold text-xl">Why Choose My Sadaqah Online</h3>
            </div>
            <ul class="space-y-2 text-customgray">
              <li class="flex items-start gap-2">
                <i class="fas fa-circle text-xs mt-1.5 text-hotpink"></i>
                <span>100% donation policy to your selected cause</span>
              </li>
              <li class="flex items-start gap-2">
                <i class="fas fa-circle text-xs mt-1.5 text-hotpink"></i>
                <span>Trusted charity partners and transparent updates</span>
              </li>
              <li class="flex items-start gap-2">
                <i class="fas fa-circle text-xs mt-1.5 text-hotpink"></i>
                <span>Easy platform for one-time or regular giving</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Video Section -->
  <section
    class="py-16 bg-gradient-to-b from-teal/5 to-white relative overflow-hidden"
  >
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center mb-12">
        <span
          class="inline-block px-4 py-1 bg-teal/10 text-teal rounded-full text-sm font-medium mb-3"
        >
          <i class="fas fa-video mr-2"></i>See The Impact
        </span>
        <h2 class="text-3xl md:text-4xl font-bold text-customgray">
          Witness Your <span class="text-teal">Sadaqah in Action</span>
        </h2>
        <div class="h-1 w-24 bg-hotpink mx-auto mt-4"></div>
      </div>

      <div class="max-w-7xl mx-auto">
        <div class="relative rounded-2xl overflow-hidden shadow-xl bg-black">
          <!-- Video thumbnail with play overlay (for better page load performance) -->
          <div
            class="relative aspect-auto h-96 group cursor-pointer video-container"
          >
            <!-- Replace with your actual YouTube embed, this is a placeholder structure -->
            <iframe
              class="w-full h-full rounded-xl"
              src="https://www.youtube.com/embed/VIDEO_ID_HERE?rel=0"
              title="Sadaqah Impact 2024"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            >
            </iframe>
          </div>
        </div>

        <div
          class="mt-8 bg-white p-6 rounded-xl shadow-md border-l-4 border-teal"
        >
          <h3 class="font-bold text-xl text-customgray mb-3">
            Your Sadaqah Makes a Difference
          </h3>
          <p class="text-customgray/80">
            Watch how your contributions have transformed lives across different
            communities. Every donation creates ripples of positive change.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 bg-white relative overflow-hidden">
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center mb-12">
        <span
          class="inline-block px-4 py-1 bg-hotpink/10 text-hotpink rounded-full text-sm font-medium mb-3"
        >
          <i class="fas fa-question-circle mr-2"></i>About Donations
        </span>
        <h2 class="text-3xl md:text-4xl font-bold text-customgray">
          Donation <span class="text-hotpink">FAQs</span>
        </h2>
        <div class="h-1 w-24 bg-hotpink mx-auto mt-4"></div>
      </div>

      <div class="max-w-3xl mx-auto">
        <FAQItem
          question="What is Sadaqah?"
          answer="Sadaqah is a voluntary act of charity given out of compassion, love, friendship, or generosity to help those in need."
        />

        <FAQItem
          question="How can I give Sadaqah online?"
          answer="You can give Sadaqah online through our secure platform by selecting a cause, entering your donation amount, and completing the payment process."
        />

        <FAQItem
          question="Is there a minimum amount for Sadaqah?"
          answer="No, there is no minimum amount for Sadaqah. Every contribution, no matter how small, makes a difference."
        />
      </div>
    </div>

    <style>
      /* Custom animations */
      .animate-fade-in-left {
        animation: fadeInLeft 1s ease-out forwards;
      }

      .animate-fade-in-right {
        animation: fadeInRight 1s ease-out forwards;
      }

      @keyframes fadeInLeft {
        from {
          opacity: 0;
          transform: translateX(-20px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @keyframes fadeInRight {
        from {
          opacity: 0;
          transform: translateX(20px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      /* Subtle scale hover effect */
      .hover\:scale-102:hover {
        transform: scale(1.02);
      }

      /* Responsive adjustments */
      @media (max-width: 768px) {
        .container {
          padding-top: 2rem;
          padding-bottom: 2rem;
        }
      }
    </style>
  </section></Layout
>
