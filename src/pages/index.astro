---
import Layout from "../layout/Layout.astro";
import DonationCard from "../components/DonationCard.astro";
import HomepageSlider from "../components/HomepageSlider.astro";
import BlogCard from "../components/BlogCard.astro";
import { SEO } from "astro-seo";
const pageImage = "/assets/images/logo.png";
const title = "My Sadaqah Online";
const description =
  "My Sadaqah Online is a platform that connects donors with charitable projects, making it easy to give and track your donations.";
const keywords =
  "charity, donations, sadaqah, zakat, online giving, humanitarian aid, social impact, community support, fundraising, non-profit organization, philanthropy, global giving, charitable projects, transparent donations, impact-driven giving";
---

<SEO
  title={title}
  description={description}
  canonical=""
  openGraph={{
    basic: {
      title: `${title}`,
      type: "website",
      image: `${pageImage}`,
    },
    optional: {
      description: `${description}`,
    },
  }}
  twitter={{
    creator: "@jonasmerlins1",
  }}
  extend={{
    // extending the default link tags
    link: [{ rel: "icon", href: "/favicon.png" }],
    // extending the default meta tags
    meta: [
      {
        name: "twitter:image",
        content: `${pageImage ? pageImage : "/assets/images/logo.png"}`,
      },
      {
        name: "twitter:title",
        content: `${title}`,
      },
      {
        name: "twitter:description",
        content: `${description}`,
      },
      { name: "keywords", content: `${keywords}` },
    ],
  }}
/>
<Layout
  title={title}
  description={description}
  pageImage={pageImage ? pageImage : "/assets/images/logo.png"}
>
  <section>
    <HomepageSlider />
  </section>
  <DonationCard programId={[]} />
  <section
    class="py-16 bg-gradient-to-b from-white to-gray-50 relative overflow-hidden min-h-screen flex items-center"
  >
   

    <div class="container mx-auto px-4 relative z-10">
      <div class="flex flex-col md:flex-row gap-8 lg:gap-12 items-center">
        <div class="md:w-1/2 animate-fade-in-left">
          <div
            class="inline-block px-4 py-1 bg-customblue/10 text-customblue rounded-full text-sm font-medium mb-6"
          >
            <i class="fas fa-heart mr-2"></i>Zakat Impact
          </div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6 relative">
            Your Zakat <span class="text-hotpink">Changes Lives</span>
            <div class="absolute -bottom-3 left-0 w-20 h-1 bg-hotpink"></div>
          </h2>
          <p class="text-lg mb-6 text-customgray leading-relaxed">
            Your Zakat is more than just charity—it's a purification of wealth,
            a fulfillment of duty, and a means of bringing real change to those
            who need it most.
          </p>

          <div
            class="bg-white p-5 rounded-xl shadow-md border-l-4 border-teal mb-6 transform hover:scale-102 transition-all duration-300"
          >
            <p class="text-customgray mb-2">According to recent statistics:</p>
            <div class="flex items-center gap-4 mb-3">
              <div class="bg-teal/10 p-3 rounded-full text-teal">
                <i class="fas fa-utensils"></i>
              </div>
              <div>
                <div class="font-bold text-xl">6.9 million</div>
                <div class="text-sm text-customgray/80">
                  Meals provided to people in need
                </div>
              </div>
            </div>
            <div class="flex items-center gap-4">
              <div class="bg-teal/10 p-3 rounded-full text-teal">
                <i class="fas fa-hands-helping"></i>
              </div>
              <div>
                <div class="font-bold text-xl">Reaching thousands</div>
                <div class="text-sm text-customgray/80">
                  Your Zakat is their lifeline
                </div>
              </div>
            </div>
          </div>

          <div class="relative pl-6 border-l-2 border-gray-300 mb-6">
            <i
              class="fas fa-quote-left text-customblue absolute -left-3 bg-gray-50 text-xl"
            ></i>
            <p class="italic text-customgray mb-2">
              "Tell them Zakat is to be taken from their rich and given to their
              poor."
            </p>
            <p class="text-sm font-semibold text-customgray">
