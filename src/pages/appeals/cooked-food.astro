---
import AppealsBanner from "../../components/AppealsBanner.astro";
import Layout from "../../layout/Layout.astro";
import DonationCard from "../../components/DonationCard.astro";
import FAQItem from "../../components/SingleFaq.astro";
import { SEO } from "astro-seo";
const pageImage = "/assets/images/logo.png";
const title =
  "Donate Cooked Meals with My Sadaqah Online - Feed the Needy Today";
const description =
  "Your Sadaqah provides warm meals to the hungry. Support the poor, sick, and elderly with ready food. Quick, secure giving with 100% donation policy.";
const keywords =
  "Cooked Food, Cooked Food Donation, Cooked Meal, Feed the Hungry, Hot Meal Donation";
---

<SEO
  title={title}
  description={description}
  canonical=""
  openGraph={{
    basic: {
      title: `${title}`,
      type: "website",
      image: `${pageImage}`,
    },
    optional: {
      description: `${description}`,
    },
  }}
  twitter={{
    creator: "@jonasmerlins1",
  }}
  extend={{
    // extending the default link tags
    link: [{ rel: "icon", href: "/favicon.png" }],
    // extending the default meta tags
    meta: [
      {
        name: "twitter:image",
        content: `${pageImage}`,
      },
      {
        name: "twitter:title",
        content: `${title}`,
      },
      {
        name: "twitter:description",
        content: `${description}`,
      },
      { name: "keywords", content: `${keywords}` },
    ],
  }}
/>
<Layout title={title} description={description} pageImage={pageImage}>
  <AppealsBanner
    title="Cooked Food"
    description="A Small Gift. A Warm Meal. A Big Impact"
    image="/assets/images/appeals/cooked-food-banner.jpg"
  />

  <DonationCard programId={[]} />

  <section class="relative py-14 overflow-hidden max-w-7xl mx-auto">
    <div class="container mx-auto px-4 relative z-10">
      <!-- Two-column layout -->
      <div class="flex flex-col lg:flex-row gap-8 items-center">
        <!-- Left column: Image -->
        <div class="lg:w-3/5">
          <div
            class="inline-block px-3 py-1 bg-hotpink/10 text-hotpink/90 rounded-full text-xs font-medium mb-4 shadow-sm"
          >
            How Your Donation Feeds the Hungry
          </div>

          <h2
            class="text-2xl md:text-3xl font-semibold mb-6 text-customgray relative"
          >
            The Significance & Impact
            <span class="block w-12 h-0.5 bg-teal mt-3"></span>
          </h2>

          <!-- Paragraphs without bullet points -->
          <div class="prose prose-lg text-customgray/80 max-w-none space-y-4">
            <p>
              We work with trusted teams on the ground to prepare and distribute
              cooked meals in areas affected by poverty, conflict, and disaster.
              Many families lack even basic cooking facilities—your support
              fills this critical gap.
            </p>

            <p>
              Our platform allows you to choose a cause and donate easily. From
              one-time meals to daily meal drives, your generosity ensures that
              someone eats today. You'll receive updates, so you can see the
              difference your Sadaqah makes. It's more than food—it's a chance
              at survival, delivered with dignity.
            </p>
          </div>

          <!-- Subtle separator -->
          <div
            class="w-full h-px bg-gradient-to-r from-transparent via-customgray/20 to-transparent my-6"
          >
          </div>

          <!-- Simple stat cards -->
          <div class="flex flex-wrap gap-4 items-center justify-start">
            <div
              class="bg-white/80 backdrop-blur-sm px-4 py-3 rounded-lg shadow-sm border border-customgray/10 flex items-center gap-3"
            >
              <div class="text-hotpink">
                <i class="fas fa-globe text-lg"></i>
              </div>
              <div>
                <div class="font-medium">Global Reach</div>
              </div>
            </div>

            <div
              class="bg-white/80 backdrop-blur-sm px-4 py-3 rounded-lg shadow-sm border border-customgray/10 flex items-center gap-3"
            >
              <div class="text-teal">
                <i class="fas fa-truck text-lg"></i>
              </div>
              <div>
                <div class="font-medium">Quick Distribution</div>
              </div>
            </div>

            <div
              class="bg-white/80 backdrop-blur-sm px-4 py-3 rounded-lg shadow-sm border border-customgray/10 flex items-center gap-3"
            >
              <div class="text-customblue">
                <i class="fas fa-chart-line text-lg"></i>
              </div>
              <div>
                <div class="font-medium">Regular Updates</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right column: Content -->
        <div class="lg:w-2/5">
          <div class="relative">
            <!-- Main image with styling -->
            <div
              class="rounded-tr-3xl rounded-bl-3xl overflow-hidden shadow-md"
            >
              <img
                src="/assets/images/appeals/cooked-food-section.jpg"
                alt="Food distribution"
                class="w-full h-auto object-cover"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="relative py-16 bg-white max-w-7xl mx-auto">
    <div class="container mx-auto px-4">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <div
          class="inline-block px-4 py-1 bg-teal/10 text-teal rounded-full text-sm font-medium mb-3"
        >
          <i class="fas fa-info-circle mr-2"></i>Every Plate Makes a Difference
        </div>
        <h2 class="text-3xl font-bold mb-4">Your Impact</h2>
        <div class="w-20 h-1 bg-hotpink mx-auto"></div>
      </div>

      <!-- Content Paragraphs -->
      <div class="max-w-7xl mx-auto">
        <p class="text-lg mb-6 text-customgray leading-relaxed">
          A warm, ready-to-eat meal can do more than satisfy hunger—it can
          restore health, comfort, and dignity. Many people around the world,
          including the sick, elderly, and struggling families, go without a
          proper meal each day. Through your Sadaqah, My Sadaqah Online delivers
          freshly cooked food to those who need it most.
        </p>

        <p class="text-lg mb-8 text-customgray leading-relaxed">
          Each donation directly supports meal preparation and distribution in
          crisis-affected communities. Your support brings relief to people who
          are unable to cook or afford food. Give your Sadaqah today and help
          ensure someone doesn't go to bed hungry. One meal can make a real
          difference.
        </p>

        <!-- Key Points -->
        <div class="grid md:grid-cols-3 gap-6 mt-8">
          <div
            class="bg-customblue/5 p-6 rounded-xl border-l-4 border-customblue"
          >
            <div class="flex items-center gap-3 mb-3">
              <div class="bg-customblue/10 p-3 rounded-full text-customblue">
                <i class="fas fa-fire"></i>
              </div>
              <h3 class="font-bold text-xl">Why Cooked Food Matters</h3>
            </div>
            <ul class="space-y-2 text-customgray">
              <li class="flex items-start gap-2">
                <i class="fas fa-circle text-xs mt-1.5 text-hotpink"></i>
                <span>Millions lack cooking facilities due to crisis</span>
              </li>
              <li class="flex items-start gap-2">
                <i class="fas fa-circle text-xs mt-1.5 text-hotpink"></i>
                <span>Ready meals offer immediate comfort and strength</span>
              </li>
              <li class="flex items-start gap-2">
                <i class="fas fa-circle text-xs mt-1.5 text-hotpink"></i>
                <span>Food brings hope, energy, and human dignity</span>
              </li>
            </ul>
          </div>

          <div class="bg-teal/5 p-6 rounded-xl border-l-4 border-teal">
            <div class="flex items-center gap-3 mb-3">
              <div class="bg-teal/10 p-3 rounded-full text-teal">
                <i class="fas fa-heart"></i>
              </div>
              <h3 class="font-bold text-xl">How Your Sadaqah Helps</h3>
            </div>
            <ul class="space-y-2 text-customgray">
              <li class="flex items-start gap-2">
                <i class="fas fa-circle text-xs mt-1.5 text-hotpink"></i>
                <span>Hot meals delivered to the hungry daily</span>
              </li>
              <li class="flex items-start gap-2">
                <i class="fas fa-circle text-xs mt-1.5 text-hotpink"></i>
                <span>Supports the poor, sick, elderly, and displaced</span>
              </li>
              <li class="flex items-start gap-2">
                <i class="fas fa-circle text-xs mt-1.5 text-hotpink"></i>
                <span>Reaches high-need areas through trusted partners</span>
              </li>
            </ul>
          </div>

          <div class="bg-hotpink/5 p-6 rounded-xl border-l-4 border-hotpink">
            <div class="flex items-center gap-3 mb-3">
              <div class="bg-hotpink/10 p-3 rounded-full text-hotpink">
                <i class="fas fa-star"></i>
              </div>
              <h3 class="font-bold text-xl">Why My Sadaqah Online?</h3>
            </div>
            <ul class="space-y-2 text-customgray">
              <li class="flex items-start gap-2">
                <i class="fas fa-circle text-xs mt-1.5 text-customblue"></i>
                <span>Easy and secure online giving platform</span>
              </li>
              <li class="flex items-start gap-2">
                <i class="fas fa-circle text-xs mt-1.5 text-customblue"></i>
                <span>100% donation policy for maximum impact</span>
              </li>
              <li class="flex items-start gap-2">
                <i class="fas fa-circle text-xs mt-1.5 text-customblue"></i>
                <span>Clear updates so you see the difference you make</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Video Section -->
  <section
    class="py-16 bg-gradient-to-b from-teal/5 to-white relative overflow-hidden"
  >
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center mb-12">
        <span
          class="inline-block px-4 py-1 bg-teal/10 text-teal rounded-full text-sm font-medium mb-3"
        >
          <i class="fas fa-video mr-2"></i>See The Impact
        </span>
        <h2 class="text-3xl md:text-4xl font-bold text-customgray">
          Witness Your <span class="text-teal">Cooked Food in Action</span>
        </h2>
        <div class="h-1 w-24 bg-hotpink mx-auto mt-4"></div>
      </div>

      <div class="max-w-7xl mx-auto">
        <div class="relative rounded-2xl overflow-hidden shadow-xl bg-black">
          <!-- Video thumbnail with play overlay (for better page load performance) -->
          <div
            class="relative aspect-auto h-96 group cursor-pointer video-container"
          >
            <!-- Replace with your actual YouTube embed, this is a placeholder structure -->
            <iframe
              class="w-full h-full rounded-xl"
              src="https://www.youtube.com/embed/VIDEO_ID_HERE?rel=0"
              title="Cooked Food 2024 Impact"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            >
            </iframe>
          </div>
        </div>

        <div
          class="mt-8 bg-white p-6 rounded-xl shadow-md border-l-4 border-teal"
        >
          <h3 class="font-bold text-xl text-customgray mb-3">
            Last Year's Cooked Food Distribution
          </h3>
          <p class="text-customgray/80">
            Watch how your generosity brought nourishment to thousands of
            families in need. For many, this was their only proper meal of the
            day.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 bg-white relative overflow-hidden">
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center mb-12">
        <span
          class="inline-block px-4 py-1 bg-hotpink/10 text-hotpink rounded-full text-sm font-medium mb-3"
        >
          <i class="fas fa-question-circle mr-2"></i>About Donations
        </span>
        <h2 class="text-3xl md:text-4xl font-bold text-customgray">
          Donation <span class="text-hotpink">FAQs</span>
        </h2>
        <div class="h-1 w-24 bg-hotpink mx-auto mt-4"></div>
      </div>

      <div class="max-w-3xl mx-auto">
        <FAQItem
          question="What is Cooked Food Sadaqah?"
          answer="Cooked Food Sadaqah is a charitable act where your donation provides freshly prepared meals to those in need, ensuring they receive nourishment and dignity."
        />

        <FAQItem
          question="Who benefits from Cooked Food Sadaqah?"
          answer="Your donations benefit the poor, sick, elderly, and displaced individuals who lack access to proper meals or cooking facilities."
        />

        <FAQItem
          question="How are the meals distributed?"
          answer="Meals are prepared and distributed through trusted local partners in high-need areas, ensuring they reach the most vulnerable communities efficiently."
        />
      </div>
    </div>

    <style>
      /* Custom animations */
      .animate-fade-in-left {
        animation: fadeInLeft 1s ease-out forwards;
      }

      .animate-fade-in-right {
        animation: fadeInRight 1s ease-out forwards;
      }

      @keyframes fadeInLeft {
        from {
          opacity: 0;
          transform: translateX(-20px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @keyframes fadeInRight {
        from {
          opacity: 0;
          transform: translateX(20px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      /* Subtle scale hover effect */
      .hover\:scale-102:hover {
        transform: scale(1.02);
      }

      /* Responsive adjustments */
      @media (max-width: 768px) {
        .container {
          padding-top: 2rem;
          padding-bottom: 2rem;
        }
      }
    </style>
  </section></Layout
>
