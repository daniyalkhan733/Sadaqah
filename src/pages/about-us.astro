---
import Layout from "../layout/Layout.astro";
import Banner from "../components/Banner.astro";
import FAQItem from "../components/SingleFaq.astro";
import { SEO } from "astro-seo";
const pageImage = "/assets/images/logo.png";
const title = "About Us | My Sadaqah Online";
const description ="My Sadaqah Online is a Canada-based charity dedicated to making Sadaqah simple, impactful, and trustworthy, connecting your generosity to those who need it most.";
const keywords = "charity, donations, sadaqah, zakat, online giving, humanitarian aid, social impact, community support, fundraising, non-profit organization, philanthropy, global giving, charitable projects, transparent donations, impact-driven giving";
---

<SEO
  title={title}
  description={description}
  canonical=""
  openGraph={{
    basic: {
      title: `${title}`,
      type: "website",
      image: `${pageImage}`,
    },
    optional: {
      description: `${description}`,
    },
  }}
  twitter={{
    creator: "@jonasmerlins1",
  }}
  extend={{
    // extending the default link tags
    link: [{ rel: "icon", href: "/favicon.png" }],
    // extending the default meta tags
    meta: [
      {
        name: "twitter:image",
        content: `${pageImage ? pageImage : "/assets/images/logo.png"}`,
      },
      {
        name: "twitter:title",
        content: `${title}`,
      },
      {
        name: "twitter:description",
        content: `${description}`,
      },
      { name: "keywords", content: `${keywords}` },
    ],
  }}
/>
<Layout title={title} description={description} pageImage={pageImage ? pageImage : "/assets/images/logo.png"}>
  <Banner
    title="About Us"
    description="My Sadaqah Online is a Canada-based charity dedicated to making Sadaqah simple, impactful, and trustworthy. We connect your generosity to those who need it most."
    image="/assets/images/home.jpg"
  />
  
  <!-- About Us Section -->
  <section class="relative py-14 overflow-hidden max-w-7xl mx-auto">
   

    <div class="container mx-auto px-4 relative z-10">
      <!-- Two-column layout -->
      <div class="flex flex-col lg:flex-row gap-8 items-center">
        <!-- Left column: Content -->
        <div class="lg:w-3/5">
          <div
            class="inline-block px-3 py-1 bg-hotpink/10 text-hotpink/90 rounded-full text-xs font-medium mb-4 shadow-sm"
          >
            Who We Are
          </div>

          <h2
            class="text-2xl md:text-3xl font-semibold mb-6 text-customgray relative"
          >
            My Sadaqah Online
            <span class="block w-12 h-0.5 bg-teal mt-3"></span>
          </h2>

          <!-- Paragraphs without bullet points -->
          <div class="prose prose-lg text-customgray/80 max-w-none space-y-4">
            <p>
              My Sadaqah Online is a Canada-based charity dedicated to making Sadaqah simple, impactful, and trustworthy. We connect your generosity to those who need it most through carefully managed projects like <span class="font-semibold">Qurbani</span>, <span class="font-semibold">Orphan Sponsorship</span>, <span class="font-semibold">Build A Masjid</span>, and <span class="font-semibold">Water Appeals</span>.
            </p>

            <p>
              Our platform allows donors to give with confidence, knowing that every contribution is handled with transparency, religious compliance, and a 100% donation policy. With your support, we bring relief, dignity, and lasting change to struggling communities around the world.
            </p>
          </div>

          <!-- Subtle separator -->
          <div
            class="w-full h-px bg-gradient-to-r from-transparent via-customgray/20 to-transparent my-6"
          >
          </div>

          <!-- Simple stat cards -->
          <div class="flex flex-wrap gap-4 items-center justify-start">
            <div
              class="bg-white/80 backdrop-blur-sm px-4 py-3 rounded-lg shadow-sm border border-customgray/10 flex items-center gap-3"
            >
              <div class="text-hotpink">
                <i class="fas fa-mosque text-lg"></i>
              </div>
              <div>
                <div class="font-medium">100% Donation Policy</div>
              </div>
            </div>

            <div
              class="bg-white/80 backdrop-blur-sm px-4 py-3 rounded-lg shadow-sm border border-customgray/10 flex items-center gap-3"
            >
              <div class="text-teal">
                <i class="fas fa-hand-holding-heart text-lg"></i>
